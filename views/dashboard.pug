doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Noto+Sans+KR:100,300,400|Roboto:100,300,400,500" rel="stylesheet")
    link(rel="stylesheet" href="/stylesheets/dashboard/main.css")
    title dashboard
  body
    div.index-section
      div.index-section__create-button
      ul.index-section__project-list
        each project in projects
          li.index-section__project
            div.index-section__project-title= project.title
    div.gutter
    div.content-section
      form.form(action="/project" method="post" enctype="multipart/form-data")
        div.form__member
          label.form__member-name.form__label.form__label--text(for="title") Title
          div.form__input-wrap
            input.form__input.form__input--text(
              id="title"
              name="title"
              required
            )
        div.form__member
          label.form__member-name.form__label.form__label--text(for="quick-view-url") Quick View Url
          div.form__input-wrap
            input.form__input.form__input--text(
              id="quick-view-url"
              name="quick-view-url"
              required
            )
        div.form__member
          label.form__member-name.form__label.form__label--text(for="client") Client
          div.form__input-wrap
            input.form__input.form__input--text(
              id="client"
              name="client"
            )
        div.form__member
          label.form__member-name.form__label.form__label--text(for="agency") Agency
          div.form__input-wrap
            input.form__input.form__input--text(
              id="agency"
              name="agency"
            )
        div.form__member
          label.form__member-name.form__label.form__label--text(for="role") Role
          div.form__input-wrap
            input.form__input.form__input--text(
              id="role"
              name="role"
            )
        div.form__member
          span.form__member-name Catogory
          div.form__input-wrap
            input.form__input.form__input--radio(
              type="radio"
              id="work"
              name="category"
              value="work"
              checked
            )
            label.form__label.form__label--radio(for="work") Work
            input.form__input.form__input--radio(
              type="radio"
              id="lab"
              name="category"
              value="lab"
            )
            label.form__label.form__label--radio(for="lab") Lab
        div.form__member
          label.form__member-name.form__label.form__label--text(for="snapshot-column") Snapshot Column
          div.form__input-wrap
            input.form__input.form__input--number(
              type="number"
              id="snapshot-column"
              name="snapshot-column"
              value="1"
              min="0"
            )
        div.form__member
          label.form__member-name.form__label.form__label--text(for="video-url") Video Url
          div.form__input-wrap.form__input-wrap--video
            input.form__input.form__input--text(
              id="video-url"
              name="video-url"
            )
          div.form__button-wrap
            div.form__button.form__button--add
        div.form__member
          label.form__member-name.form__label(for="thumbnail") Thumbnail
          div.form__input-wrap
            input.form__input.form__input--file(
              type="file"
              id="thumbnail"
              name="thumbnail"
              accept="image/*"
              required
            )
        div.form__member
          label.form__member-name.form__label(for="header-image") Header Image
          div.form__input-wrap
            input.form__input.form__input--file(
              type="file"
              id="header-image"
              name="header-image"
              accept="image/*"
              required
            )
        div.form__member
          label.form__member-name.form__label(for="snapshot") Snapshot
          div.form__input-wrap
            input.form__input.form__input--file(
              type="file"
              id="snapshot"
              name="snapshot"
              accept="image/*"
              multiple
              required
            )
        button.form__button.form__button--submit(type="submit") submit
    script(type="module" src="/javascripts/dashboard/main.js")